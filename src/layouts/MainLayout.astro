---
interface Props {
  title: string;
  description: string;
  path?: string;
}

const { title, description, path = '' } = Astro.props;

const WEBSITE_URL = 'https://notlega.github.io';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- title -->
    <title>{title}</title>

    <!-- metatags -->
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- opengraph / fb -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`${WEBSITE_URL}/${path}`} />
    <meta property="og:site_name" content="Ong Hin Journ's Portfolio" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="" />

    <!-- twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={`${WEBSITE_URL}/${path}`} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="" />
  </head>
  <body
    class="bg-background-light pt-16"
    x-data={`{ mobileSidebarOpen: false }`}
  >
    <section
      class="fixed top-0 z-50 flex items-center justify-center w-full h-16 shadow-md border-b bg-background-light bg-opacity-100 backdrop-blur-md border-text-light border-opacity-10"
    >
      <div
        class="container flex flex-row items-center justify-between p-6 mx-auto"
      >
        <a
          href="/"
          class="flex items-center w-auto text-2xl font-extrabold leading-none select-none"
          >Ong Hin Journ</a
        >
        <nav class="hidden py-5 text-base md:flex md:-ml-5 md:py-0">
          <a
            href="/"
            class="relative mx-4 font-medium leading-6 text-text-light hover:text-opacity-80"
          >
            <span class="block">Home</span>
          </a>
          <a
            href="#about"
            class="relative mx-4 font-medium leading-6 text-text-light hover:text-opacity-80"
          >
            <span class="block">About</span>
          </a>
          <a
            href="#projects"
            class="relative mx-4 font-medium leading-6 text-text-light hover:text-opacity-80"
          >
            <span class="block">Projects</span>
          </a>
          <a
            href="#contact"
            class="relative mx-2 font-medium leading-6 text-text-light hover:text-opacity-80"
          >
            <span class="block">Contact</span>
          </a>
        </nav>
        <button
          class="flex items-center md:hidden focus:text-opacity-80"
          @click="mobileSidebarOpen = true"
        >
          <svg
            class="fill-current h-6 w-6 text-inherit focus:text-opacity-80"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
          </svg>
        </button>
      </div>
    </section>
    <template x-teleport="body">
      <div
        x-show="mobileSidebarOpen"
        @keydown.window.escape="mobileSidebarOpen = false"
        class="relative z-[99]"
      >
        <div
          x-show="mobileSidebarOpen"
          x-transition.opacity.duration.600ms
          @click="mobileSidebarOpen = false"
          class="fixed inset-0 bg-background-light bg-opacity-10"
        >
        </div>
        <div class="fixed inset-0 overflow-hidden">
          <div class="absolute inset-0 overflow-hidden">
            <div class="fixed inset-y-0 right-0 flex max-w-full">
              <div
                x-show="mobileSidebarOpen"
                @click.away="mobileSidebarOpen = false"
                x-transition:enter="transform transition ease-in-out duration-500 sm:duration-700"
                x-transition:enter-start="translate-x-full"
                x-transition:enter-end="translate-x-0"
                x-transition:leave="transform transition ease-in-out duration-500 sm:duration-700"
                x-transition:leave-start="translate-x-0"
                x-transition:leave-end="translate-x-full"
                class="w-screen max-w-md"
              >
                <div
                  class="flex flex-col items-center justify-center h-full py-5 overflow-y-scroll bg-background-light border-l shadow-lg border-text-light border-opacity-10"
                >
                  <button
                    @click="mobileSidebarOpen = false"
                    class="absolute top-0 right-0 z-30 flex items-center justify-center px-3 py-2 mt-4 mr-5 text-text-light"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="30"
                      height="30"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="tabler-icon tabler-icon-x"
                      ><path d="M18 6l-12 12"></path><path d="M6 6l12 12"
                      ></path></svg
                    >
                  </button>
                  <nav>
                    <ul class="text-center text-3xl space-y-16">
                      <li>
                        <a
                          href="/"
                          class="font-medium leading-6 text-text-light hover:text-opacity-80"
                        >
                          <span class="block">Home</span>
                        </a>
                      </li>
                      <li>
                        <a
                          href="#about"
                          class="font-medium leading-6 text-text-light hover:text-opacity-80"
                          @click="mobileSidebarOpen = false"
                        >
                          <span class="block">About</span>
                        </a>
                      </li>
                      <li>
                        <a
                          href="#projects"
                          class="font-medium leading-6 text-text-light hover:text-opacity-80"
                          @click="mobileSidebarOpen = false"
                        >
                          <span class="block">Projects</span>
                        </a>
                      </li>
                      <li>
                        <a
                          href="#contact"
                          class="font-medium leading-6 text-text-light hover:text-opacity-80"
                          @click="mobileSidebarOpen = false"
                        >
                          <span class="block">Contact</span>
                        </a>
                      </li>
                    </ul>
                  </nav>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </template>
    <main
      class="container relative flex items-start min-h-screen 2xl:px-0 lg:px-4 px-5 pt-0 pb-0 mx-auto max-w-7xl"
    >
      <slot />
    </main>
  </body>
