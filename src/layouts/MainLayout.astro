---
import { WEBSITE_URL, LINKEDIN_URL, GITHUB_URL } from '@/constants';

interface Props {
  title: string;
  description: string;
  path?: string;
}

const { title, description, path = '' } = Astro.props;
---

<html class="scroll-smooth" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- title -->
    <title>{title}</title>

    <!-- metatags -->
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- opengraph / fb -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`${WEBSITE_URL}/${path}`} />
    <meta property="og:site_name" content="Ong Hin Journ's Portfolio" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="" />

    <!-- twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={`${WEBSITE_URL}/${path}`} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="" />
  </head>
  <body
    class="bg-background-light pt-16"
    x-data={`{ mobileSidebarOpen: false }`}
  >
    <section
      class="fixed top-0 z-50 flex items-center justify-center w-full h-16 shadow-md border-b bg-background-light bg-opacity-100 backdrop-blur-md border-text-light border-opacity-10"
    >
      <div
        class="container flex flex-row items-center justify-between p-6 mx-auto"
      >
        <a
          href="/"
          class="flex items-center w-auto text-2xl font-extrabold leading-none select-none"
          >Ong Hin Journ</a
        >
        <nav class="hidden py-5 text-base md:flex md:-ml-5 md:py-0">
          <a
            href="#home"
            class="relative mx-4 font-medium leading-6 text-text-light hover:text-opacity-80"
          >
            <span class="block">Home</span>
          </a>
          <a
            href="#about"
            class="relative mx-4 font-medium leading-6 text-text-light hover:text-opacity-80"
          >
            <span class="block">About</span>
          </a>
          <a
            href="#projects"
            class="relative mx-4 font-medium leading-6 text-text-light hover:text-opacity-80"
          >
            <span class="block">Projects</span>
          </a>
          <a
            href="#work"
            class="relative mx-4 font-medium leading-6 text-text-light hover:text-opacity-80"
          >
            <span class="block">Work</span>
          </a>
          <a
            href="#contact"
            class="relative mx-4 font-medium leading-6 text-text-light hover:text-opacity-80"
          >
            <span class="block">Contact</span>
          </a>
        </nav>
        <button
          class="flex items-center md:hidden focus:text-opacity-80"
          @click="mobileSidebarOpen = true"
        >
          <svg
            class="fill-current h-6 w-6 text-inherit focus:text-opacity-80"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
          </svg>
        </button>
      </div>
    </section>
    <template x-teleport="body">
      <div
        x-show="mobileSidebarOpen"
        @keydown.window.escape="mobileSidebarOpen = false"
        class="relative z-[99]"
      >
        <div
          x-show="mobileSidebarOpen"
          x-transition.opacity.duration.600ms
          @click="mobileSidebarOpen = false"
          class="fixed inset-0 bg-background-light bg-opacity-10"
        >
        </div>
        <div class="fixed inset-0 overflow-hidden">
          <div class="absolute inset-0 overflow-hidden">
            <div class="fixed inset-y-0 right-0 flex max-w-full">
              <div
                x-show="mobileSidebarOpen"
                @click.away="mobileSidebarOpen = false"
                x-transition:enter="transform transition ease-in-out duration-500 sm:duration-700"
                x-transition:enter-start="translate-x-full"
                x-transition:enter-end="translate-x-0"
                x-transition:leave="transform transition ease-in-out duration-500 sm:duration-700"
                x-transition:leave-start="translate-x-0"
                x-transition:leave-end="translate-x-full"
                class="w-screen max-w-md"
              >
                <div
                  class="flex flex-col items-center justify-center h-full py-5 overflow-y-scroll bg-background-light border-l shadow-lg border-text-light border-opacity-10"
                >
                  <button
                    @click="mobileSidebarOpen = false"
                    class="absolute top-0 right-0 z-30 flex items-center justify-center px-3 py-2 mt-4 mr-5 text-text-light"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="30"
                      height="30"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="tabler-icon tabler-icon-x"
                      ><path d="M18 6l-12 12"></path><path d="M6 6l12 12"
                      ></path></svg
                    >
                  </button>
                  <nav>
                    <ul class="text-center text-3xl space-y-16">
                      <li>
                        <a
                          href="#home"
                          class="font-medium leading-6 text-text-light hover:text-opacity-80"
                        >
                          <span class="block">Home</span>
                        </a>
                      </li>
                      <li>
                        <a
                          href="#about"
                          class="font-medium leading-6 text-text-light hover:text-opacity-80"
                          @click="mobileSidebarOpen = false"
                        >
                          <span class="block">About</span>
                        </a>
                      </li>
                      <li>
                        <a
                          href="#projects"
                          class="font-medium leading-6 text-text-light hover:text-opacity-80"
                          @click="mobileSidebarOpen = false"
                        >
                          <span class="block">Projects</span>
                        </a>
                      </li>
                      <li>
                        <a
                          href="#work"
                          class="font-medium leading-6 text-text-light hover:text-opacity-80"
                        >
                          <span class="block">Work</span>
                        </a>
                      </li>
                      <li>
                        <a
                          href="#contact"
                          class="font-medium leading-6 text-text-light hover:text-opacity-80"
                          @click="mobileSidebarOpen = false"
                        >
                          <span class="block">Contact</span>
                        </a>
                      </li>
                    </ul>
                  </nav>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </template>
    <main>
      <slot />
    </main>
  </body>
  <section>
    <footer
      class="flex flex-col items-center p-8 mx-auto sm:flex-row border-t border-text-light border-opacity-10"
    >
      <a
        href="/"
        class="text-xl font-black leading-none text-text-light select-none logo"
        >Ong Hin Journ</a
      >
      <p
        class="mt-4 text-sm text-text-light text-opacity-90 sm:ml-4 sm:pl-4 sm:border-l sm:border-text-light sm:border-opacity-50 sm:mt-0"
      >
        &copy; 2023 Ong Hin Journ
      </p>
      <div
        class="inline-flex justify-center mt-4 space-x-5 sm:ml-auto sm:mt-0 sm:justify-start"
      >
        <a
          href={LINKEDIN_URL}
          class="text-text-light text-opacity-60 hover:text-opacity-100"
        >
          <span class="sr-only">LinkedIn</span>
          <svg
            class="w-8 h-8"
            fill="currentColor"
            viewBox="0 0 16 16"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M 2.757813 1 C 1.792969 1 1 1.792969 1 2.757813 L 1 12.246094 C 1 13.207031 1.792969 14 2.757813 14 L 12.246094 14 C 13.207031 14 14 13.207031 14 12.246094 L 14 2.757813 C 14 1.792969 13.207031 1 12.246094 1 Z M 2.757813 2 L 12.246094 2 C 12.667969 2 13 2.332031 13 2.757813 L 13 12.246094 C 13 12.667969 12.667969 13 12.246094 13 L 2.757813 13 C 2.332031 13 2 12.667969 2 12.246094 L 2 2.757813 C 2 2.332031 2.332031 2 2.757813 2 Z M 4 3 C 3.449219 3 3 3.449219 3 4 C 3 4.550781 3.449219 5 4 5 C 4.550781 5 5 4.550781 5 4 C 5 3.449219 4.550781 3 4 3 Z M 3 6 L 3 12 L 5 12 L 5 6 Z M 6 6 L 6 12 L 8 12 L 8 9.320313 C 8 8.488281 8.078125 7.742188 9.078125 7.742188 C 10.0625 7.742188 10 8.636719 10 9.375 L 10 12 L 12 12 L 12 9.039063 C 12 7.320313 11.640625 6 9.691406 6 C 8.753906 6 8.28125 6.375 8.023438 6.875 L 8 6.875 L 8 6 Z"
            ></path>
          </svg>
        </a>
        <a
          href={GITHUB_URL}
          class="text-text-light text-opacity-60 hover:text-opacity-100"
        >
          <span class="sr-only">GitHub</span>
          <svg
            class="w-8 h-8"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
            ></path>
          </svg>
        </a>
      </div>
    </footer>
  </section>
</html>
